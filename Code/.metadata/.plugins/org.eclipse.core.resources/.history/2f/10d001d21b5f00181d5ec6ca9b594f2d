package week4;

import java.util.concurrent.ForkJoinPool;

import week3.AverageArray_RT;

public class Solution {
	public static void main(String args[]) {
		int[] arr = createLargeArray();
		ModeArray t = new ModeArray(arr, 0, arr.length);
		int result = ForkJoinPool.commonPool().invoke(t);
		System.out.println("Moda: " + result);
	}
	
	public static int[] createLargeArray(){
		//Um array bem grande, 80 milhoes de registos
		//int[] data = new int[80000000];
		int[] data = new int[800000];
		for (int i = 0; i < data.length; i++)
			//data[i] = i + 1;
			data[i] = (int) (Math.random() * 10) + 1;
		//printArray(data, "ArrayInicial");
		return data;
	}

	private static void printArray(int[] data, String string) {
		System.out.println(string);
		for(int i = 0; i < data.length; i++)
			System.out.print(data[i] + " ");
		System.out.println();
	}
}
