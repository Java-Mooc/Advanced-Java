/**
 * Source code from the Java Parallel Programming Coursera course.
 */
package week3;

public class Exercicio {
	static int sum1, sum2;
	public static void main(String args[]) {
		double[] data = new double[1000];
		for (int i = 0; i < data.length; i++)
            data[i] = 2 * i;
		
		long startTime = System.nanoTime();
		double sum = seqArraySum(data);
		long timeInNanos = System.nanoTime() - startTime;
		System.out.println(timeInNanos);
		
		startTime = System.nanoTime();
		sum = asyncArraySum(data);
		timeInNanos = System.nanoTime() - startTime;
		System.out.println(timeInNanos);
	}
	   
	public static double seqArraySum(double[] x){
		double sum = 0;
		for(int i = 0; i < x.length; i++)
			sum += x[i];
		return sum;
	}
	
	public static double asyncArraySum(double[] x){
		sum1 = 0;
		sum2 = 0;
		finish(()->{
			async(()->{
			for(int i = 0; i < x.length/2; i++)
				sum1 += x[i];
			});
		});
		for(int i = x.length/2 ; i < x.length; i++)
			sum2 += x[i];
		
		double sum = sum1 + sum2;
		return sum;
	}
	
	
	public static double[] createLargeArray(){
		double[] data = new double[10000];
		for (int i = 0; i < data.length; i++)
			data[i] = 2 * i;
		return data;
	}
}
